<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartAttendance" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font_style</item>
    </style>

    <style name="FabTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_dialog_bg</item>
    </style>

    <!--textView base  style starts here-->
    <style name="BaseTextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextView2">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--textView base  style ends here-->

    <!--textHeader base style starts here-->
    <style name="TextHeader" parent="BaseTextView">
        <item name="android:textSize">28sp</item>
    </style>
    <!--textHeader base style ends here-->

    <!--textHeaderBold base style starts here-->
    <style name="TextHeaderBold" parent="TextHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <!--textHeaderBold base style ends here-->

    <!--TextHeaderNormal base style starts here-->
    <style name="TextHeaderNormal" parent="TextHeader">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <!--TextHeaderNormal base style ends here-->

    <!--textHeaderOnPrimaryBold base style starts here-->
    <style name="textHeaderOnPrimaryBold" parent="TextHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--textHeaderOnPrimaryBold base style ends here-->

    <!--textHeaderOnPrimaryNormal base style starts here-->
    <style name="textHeaderOnPrimaryNormal" parent="TextHeader">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--textHeaderOnPrimaryNormal base style ends here-->

    <!--textContent base style starts here-->
    <style name="TextContent" parent="BaseTextView">
        <item name="android:textSize">16sp</item>
    </style>
    <!--textContent base style ends here-->

    <!--textContentBold base style starts here-->
    <style name="TextContentBold" parent="TextContent">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <!--textContentBold base style ends here-->

    <!--TextContentNormal base style starts here-->
    <style name="TextContentNormal" parent="TextContent">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <!--TextContentNormal base style ends here-->

    <!--textContentOnPrimaryBold base style starts here-->
    <style name="textContentOnPrimaryBold" parent="TextContent">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--textContentOnPrimaryBold base style ends here-->

    <!--textContentOnPrimaryNormal base style starts here-->
    <style name="textContentOnPrimaryNormal" parent="TextContent">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--textContentOnPrimaryNormal base style ends here-->


    <!--textContentSub base style starts here-->
    <style name="TextContentSub" parent="BaseTextView2">
        <item name="android:textSize">14sp</item>
    </style>
    <!--textContentSub base style ends here-->

    <!--textContentSubBold base style starts here-->
    <style name="TextContentSubBold" parent="TextContentSub">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_sub</item>
    </style>
    <!--textContentSubBold base style ends here-->

    <!--TextContentSubNormal base style starts here-->
    <style name="TextContentSubNormal" parent="TextContentSub">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_sub</item>
    </style>
    <!--TextContentSubNormal base style ends here-->

    <!--textContentSubOnPrimaryBold base style starts here-->
    <style name="textContentSubOnPrimaryBold" parent="TextContentSub">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--textContentSubOnPrimaryBold base style ends here-->

    <!--textContentSubOnPrimaryNormal base style starts here-->
    <style name="textContentSubOnPrimaryNormal" parent="TextContentSub">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--textContentSubOnPrimaryNormal base style ends here-->
    <style name="progressDialogTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--Hyperlink style starts here-->
    <style name="Hyperlink" parent="android:Widget.TextView">
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">web</item>
    </style>
    <!--Hyperlink style ends here-->

    <style name="SuccessTextBold" parent="TextContent">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SuccessTextNormal" parent="TextContent">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ErrorTextBold" parent="TextContent">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorTextNormal" parent="TextContent">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.SmartAttendance.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Distributor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Distributor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseLinearLayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="PadLinearLayout1Side" parent="BaseLinearLayoutStyle">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="PadLinearLayout2Side" parent="BaseLinearLayoutStyle">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="PadLinearLayout3Side" parent="PadLinearLayout2Side">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="PadLinearLayout4Side" parent="PadLinearLayout3Side">
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/disabledDark</item>
    </style>

    <style name="menu">
        <!--        <item name="bbn_itemColorActive">@color/contentTextColor</item>-->
        <!--        <item name="bbn_itemColorInactive">@color/disabled</item>-->
        <!--        <item name="bbn_itemAnimationDuration">100</item>-->
        <item name="background">@drawable/border_rect_grey</item>
        <item name="elevation">0dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="fab">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--base button style starts here-->
    <style name="_button_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/minWidth</item>
        <item name="android:radius">@dimen/radius</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginRight">@dimen/layout_margin</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin</item>

    </style>

    <style name="PrimaryButton" parent="_button_style">
        <item name="android:textColor">@color/contentTextColorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>

    <!--primary button style ends here-->

    <!--secondary button style starts here-->
    <style name="SecondaryButton" parent="_button_style">
        <item name="android:textColor">@color/contentTextColorOnDisabled</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/seconary_btn_selector</item>
    </style>

    <style name="fab_blue">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="bottomSheetTitle" parent="android:Widget.TextView">
