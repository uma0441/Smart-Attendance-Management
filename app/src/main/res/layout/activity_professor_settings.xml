<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/contentBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.dashboard.profile.ProfileFragment">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="@dimen/space_10dp">

            <TextView
                android:id="@+id/subLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Modify user settings"
                android:textColor="@color/text_sub"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            tools:targetApi="lollipop">

            <RelativeLayout
                android:id="@+id/share_rl"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ring_white"
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/teju" />

                <TextView
                    android:id="@+id/dp_label"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ring_black"
                    android:elevation="5.5dp"
                    android:gravity="center"
                    android:text="KO"
                    android:textColor="@color/white"
                    android:textSize="27dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/editDp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ring_white"
                    android:elevation="6dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    android:visibility="gone"
                    app:tint="@color/colorPrimaryDark" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Professor name"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/statusTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="Available in office."
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/updateNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_edit_24"
            android:drawableTint="@color/black"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="17dp"
            android:text="Update Mobile number"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/updateStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_edit_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/quicksand_regular"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="17dp"
            android:text="Update status"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/aboutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/quicksand_regular"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="17dp"
            android:text="About"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/termsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/quicksand_regular"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="17dp"
            android:text="Terms of service"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/quicksand_regular"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="17dp"
            android:text="Privacy Policy"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerCare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/quicksand_regular"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="17dp"
            android:text="Contact support"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/quicksand_regular"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="17dp"
            android:text="Report a bug"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="150dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="@color/red"
            android:fontFamily="@font/quicksand_regular"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="17dp"
            android:text="Logout"
            android:textColor="@color/red"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>

